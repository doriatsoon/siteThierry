#menu {
	margin:auto;
	width:100%;
	height:30px;
	text-align:right;
	background-color:green;
	vertical-align:center;
}

#menu ul {
	list-style-type: none;
}

#menu ul li {
	float:left;
}

#content_menu{
	width:62%;
	margin:auto;
}

/* Listes */ 
ul, ol { 
  margin: 0px 0px 0px 0px; 
  padding: 0; 
  list-style-type: none;
} 

li {
  padding-left: 10px;
  margin-bottom: 0px;
  font-family: Verdana, sans-serif;
  font-weight: normal;
  font-size: 20px; 
}